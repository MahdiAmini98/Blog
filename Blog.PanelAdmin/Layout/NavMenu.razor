<MudPaper Width="250px" Class="d-inline-flex py-3" Elevation="0">


    <AuthorizeView>
        <Authorized>
            <MudNavMenu Class="mud-width-full">

                <MudText Typo="Typo.h6" Class="px-4"> Blog Application </MudText>
                <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">  @context.User.Identity?.Name  </MudText>


                <MudDivider Class="my-2" />

                <MudNavLink Href="/" Icon="@Icons.Material.Filled.Dashboard" IconColor="Color.Secondary">داشبورد</MudNavLink>

                <MudNavLink Href="/tags" IconColor="Color.Warning" Icon="@Icons.Material.Filled.Label">‌برچسب‌ها</MudNavLink>
                <MudNavLink Href="/categories" IconColor="Color.Primary" Icon="@Icons.Material.Filled.Category">‌دسته بندی</MudNavLink>
                <MudNavLink Href="/media" IconColor="Color.Primary" Icon="@Icons.Material.Filled.FileUpload"> مدیریت فایل ها</MudNavLink>
                <MudNavLink Href="/posts/create" IconColor="Color.Primary" Icon="@Icons.Material.Filled.AddCircle">‌ایجاد پست جدید</MudNavLink>

            </MudNavMenu>
        </Authorized>

        <NotAuthorized>
            <MudNavMenu Class="mud-width-full">

                <MudNavLink Href="/login" Icon="@Icons.Material.Filled.Login" IconColor="Color.Secondary">ورود به حساب</MudNavLink>

            </MudNavMenu>
        </NotAuthorized>


    </AuthorizeView>

</MudPaper>